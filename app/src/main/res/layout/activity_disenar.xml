<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:padding="0dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Título de la pantalla -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diseñar Producto"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_large"/>

            <EditText
                android:id="@+id/etPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_height_large"
                android:hint="Describe lo que quieres diseñar"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine|textCapSentences"
                android:gravity="top|start"
                android:maxLines="6"
                android:minLines="3"
                android:textSize="@dimen/text_medium"
                android:padding="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <Button
                android:id="@+id/btnGenerar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="Generar imagen"
                android:textSize="@dimen/text_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@android:color/black"
                android:padding="2dp">
                <ImageView
                    android:id="@+id/ivResultado"
                    android:layout_width="@dimen/image_large"
                    android:layout_height="@dimen/image_large"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagen generada"
                    android:background="@android:color/white"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_medium">
                <Button
                    android:id="@+id/btnReiniciar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Reiniciar"
                    android:textSize="@dimen/text_small"
                    android:layout_marginEnd="@dimen/margin_small"/>
                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textSize="@dimen/text_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"/>
                <Button
                    android:id="@+id/btnDescargar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Descargar"
                    android:textSize="@dimen/text_small"
                    android:layout_marginStart="@dimen/margin_small"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
