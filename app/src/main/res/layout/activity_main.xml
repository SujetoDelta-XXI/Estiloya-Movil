<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagen_background"
    tools:context=".MainActivity">

    <!-- Guías porcentuales para posición relativa -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63" />

    <!-- Botón Login -->

    <!-- Botón Registro -->

    <Button
        android:id="@+id/button"
        android:layout_width="136dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:onClick="onLoginClicked"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/login"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_login"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_buttons" />

    <Button
        android:id="@+id/button4"
        android:layout_width="132dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:onClick="onRegistroClicked"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/registro"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_registro"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_buttons" />

</androidx.constraintlayout.widget.ConstraintLayout>
