<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <!-- Estilos para filtros en modo oscuro -->
    <style name="FilterTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="FilterInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/bg_filter_input</item>
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:textColorHint">@color/filter_hint</item>
    </style>

    <style name="FilterSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:background">@drawable/bg_filter_input</item>
        <item name="android:popupBackground">@color/filter_background</item>
    </style>
</resources>
