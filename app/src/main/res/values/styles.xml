<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PopupItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="PopupIcon">
        <item name="android:layout_width">@dimen/icon_medium</item>
        <item name="android:layout_height">@dimen/icon_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="PopupText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Estilos para filtros -->
    <style name="FilterTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="FilterInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/bg_filter_input</item>
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:textColorHint">@color/filter_hint</item>
    </style>

    <style name="FilterSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:background">@drawable/bg_filter_input</item>
        <item name="android:popupBackground">@color/filter_background</item>
    </style>

    <!-- Estilo para enlaces del footer -->
    <style name="FooterLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!-- Estilo para títulos de sección del footer (reutilizable) -->
    <style name="FooterLinkTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Estilo para iconos del footer -->
    <style name="FooterIcon">
        <item name="android:layout_width">@dimen/icon_medium</item>
        <item name="android:layout_height">@dimen/icon_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
